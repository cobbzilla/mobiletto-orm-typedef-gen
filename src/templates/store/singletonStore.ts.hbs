      } finally {
        this.creating = false;
      }
    },
    async update(object: {{Name}}Type, serverErrors: Ref<MobilettoOrmValidationErrors>): Promise<{{Name}}Type> {
      try {
        this.updated = null;
        this.updating = true;
        this.updated = await {{name}}Service.update{{Name}}(object, serverErrors);
        return this.updated;
      } finally {
        this.updating = false;
      }
    },
