      try {
        this.deleted = null;
        this.deleting = true;
        const deleteResult = await {{name}}Service.delete{{Name}}(serverErrors, !!purge);
        if (deleteResult) {
          this.deleted = true;
        } else {
          this.deleted = false;
        }
        return this.deleted;
      } finally {
        this.deleting = false;
      }
    },
  },
});
